<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= @user.name %></h3>
      </div>

      <div class="box-body">
        <div>
          <%= label_tag 'email', 'E-mail:' %>
          <%= @user.email %>
        </div>
      </div>

      <div class="box-footer">
        <%= link_to 'Back', admin_users_path, class: 'btn btn-danger' %>
        <%= link_to 'Edit', edit_admin_user_url(@user), class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>

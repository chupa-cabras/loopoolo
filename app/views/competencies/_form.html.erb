<%= semantic_form_for @competency do |f| %>
  <%= f.inputs do %>
    <%= f.input :name,      :input_text => { :size => 30 } %>
    <%= f.input :description,      :input_text => { :size => 500 } %>
    <%= f.input :competency_type_id,  :as => :select, :collection => CompetencyType.all %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>

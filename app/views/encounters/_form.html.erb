<div class="row">
  <div class="col-md-6 box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Quick Example</h3>
    </div>
    <%= form_for(encounter, html: {role: 'form'}) do |f| %>
      <div class="box-body">
        <% if encounter.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(encounter.errors.count, "error") %> prohibited this encounter from being saved:</h2>

            <ul>
            <% encounter.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :date %>
          <%= f.text_field("date", {class: 'form-control', id: 'datetimepicker'}) %>
        </div>

        <div class="form-group">
          <%= f.label :status %>
          <%= f.select("status", Encounter.statuses, {include_blank: false}, {class: 'form-control'}) %>
        </div>

        <div class="form-group">
          <%= f.label :observations %>
          <%= f.text_area :observations, {class: 'form-control'} %>
        </div>

        <div class="form-group">
          <%= f.label :target_id %>
          <%= f.select('target_id', User.all.collect {|p| [ p.name, p.id ] }, {prompt: 'Select User'}, {class: 'form-control'}) %>
        </div>
        <div class="actions">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

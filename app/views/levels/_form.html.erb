<%= semantic_form_for @level do |f| %>
  <%= f.inputs do %>
    <%= f.input :name,      :input_text => { :size => 30 } %>
    <%= f.input :description,      :input_text => { :size => 500 } %>
    <%= f.input :weight,  :default => 1 %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>

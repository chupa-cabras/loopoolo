<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">My Quests</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody><tr>
            <th>Description</th>
            <th>Requestor</th>
            <th>Status</th>
            <th>Created</th>
            <th>Updated</th>
            <th colspan="3"></th>
          </tr>
          <% @quests.select{ |q| q.executor == current_user.id }.each do |q| %>
            <tr>
              <td><%= q.description %></td>
              <td><%= q.requestor %></td>
              <td><%= q.status %></td>
              <td><%= q.created_at %></td>
              <td><%= q.updated_at %></td>
              <td><%= link_to 'Show', q %></td>
              <td><%= link_to 'Edit', edit_quest_path(q) %></td>
              <td><%= link_to 'Destroy', q, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody></table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<%= render 'form', quest: @quest %>



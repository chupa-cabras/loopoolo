<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">My Quests</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody><tr>
            <th>Description</th>
            <th>Requestor</th>
            <th>Status</th>
            <th>Created</th>
            <th>Updated</th>
            <th colspan="2"></th>
          </tr>
          <% @my_quests.each do |q| %>
            <tr>
              <td><%= q.description %></td>
              <td><%= q.requestor.name %></td>
              <td><%= q.status %></td>
              <td><%= q.created_at %></td>
              <td><%= q.updated_at %></td>
              <td>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-success">
                  Finish
                </button>
              </td>
              <td>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-danger">
                  Cancel
                </button>
              </td>
            </tr>
          <% end %>
        </tbody></table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Requested Quests</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody><tr>
            <th>Description</th>
            <th>Executor</th>
            <th>Status</th>
            <th>Created</th>
            <th>Updated</th>
            <th colspan="3"></th>
          </tr>
          <% @requested_quests.each do |q| %>
            <tr>
              <td><%= q.description %></td>
              <td><%= q.executor.name %></td>
              <td><%= q.status %></td>
              <td><%= q.created_at %></td>
              <td><%= q.updated_at %></td>
              <td><%= link_to 'Show', q %></td>
              <td><%= link_to 'Edit', edit_quest_path(q) %></td>
              <td><%= link_to 'Destroy', q, method: :cancel, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody></table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>

<div class="modal modal-danger fade" id="modal-danger" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span></button>
        <h4 class="modal-title">Are you sure ?</h4>
      </div>
      <!--
      <div class="modal-body">
        <p>One fine body…</p>
      </div>
    -->
      <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-outline">Yes !</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>

<div class="modal modal-success fade" id="modal-success" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span></button>
        <h4 class="modal-title">Are you sure ?</h4>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-outline">Finish !</button>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>


<%= render 'form', quest: @quest %>

<div class="row">
  <div class="col-xs-12">
    <div class="box">


      <div class="box-body">
        <div>
          <%= label_tag 'description', 'Description:' %>
          <%= @quest.description %>
        </div>

        <div>
          <%= label_tag 'status', 'Status:' %>
          <%= @quest.status %>
        </div>

        <div>
          <%= label_tag 'created_at', 'Created:' %>
          <%= @quest.created_at %>
        </div>
        <div>
          <%= label_tag 'updated_at', 'Updated:' %>
          <%= @quest.updated_at %>
        </div>
      </div>

      <div class="box-footer">
        <%= link_to raw('Finish'), quest_finish_url(@quest), class: 'btn btn-success', method: :put,
                data: { confirm: 'Are you sure you want to finish this element?' } %>
        <%= link_to raw('Cancel'), quest_cancel_url(@quest), class: 'btn btn-danger', method: :put,
                data: { confirm: 'Are you sure you want to cancel this element?' } %>
      </div>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<div class="row">
  <div class="col-xs-12">
      <div class="box">

        <div class="box-header">
          <h3 class="box-title">List of Teams</h3>
        </div>

        <div class="box-body">
          <div id="user_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">

            <div class="row">
              <div class="col-sm-12">
                <table id="user_index" class="table table-bordered table-striped dataTable" role="grid">
                  <thead>
                    <tr>
                      <th>Logo</th>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Company</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @teams.each do |team| %>
                      <tr>
                        <td><%= team.logo %></td>
                        <td><%= team.name %></td>
                        <td><%= team.description %></td>
                        <td><%= team.company %></td>
                        <td>
                          <div class="btn-row">
                            <%= link_to raw('<i class="fa fa-search"></i>'), team, class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-cogs"></i>'), edit_admin_team_url(team), class: 'btn btn-sm btn-warning' %>
                            <%= link_to raw('<i class="fa fa-trash"></i>'), admin_user_url(team), class: 'btn btn-sm btn-danger', method: :delete,
                                            data: { confirm: 'Are you sure you want to delete this element?' } %>
                          </div>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>

          </div>
        </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-2 col-md-offset-10">
    <%= link_to 'New Team', new_team_path, class: 'btn btn-success pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="box">

      <div class="box-header">
        <h3 class="box-title"><%= @team.name %></h3>
      </div>

      <div class="box-body">
        <div>
          <%= label_tag 'description', 'Description:' %>
          <%= @team.description %>
        </div>

        <div>
          <%= label_tag 'company', 'Company:' %>
          <%= @team.company.name %>
        </div>

        <div>
          <%= label_tag 'logo', 'Logo:' %>
          <%= @team.logo %>
        </div>
      </div>

      <div class="box-footer">
        <%= link_to 'Back', teams_path, class: 'btn btn-danger' %>
        <%= link_to 'Edit', edit_team_url(@team), class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
